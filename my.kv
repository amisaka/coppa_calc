
<ItemLabel@Label>:
    font_size: '25sp'
    halign: 'left'
    valign: 'middle'
    text_size: self.size

<Container>:
    rows: 3
    text_input: text_input
    salt: salt
    nitro: nitro
    monosugars: monosugars
    starts: starts
    time: time

    AnchorLayout:
        anchor_y: 'top'
        size_hint: 1, 0.15

        TextInput:
            id: text_input
            multiline: False
            font_size: '45sp'
            input_type: 'number'
            input_filter: 'int'
            hint_text: 'Weight in grams'

    GridLayout:
        cols: 2
        padding: [50, 0, 0, 0]

        BoxLayout:
            orientation: 'vertical'

            ItemLabel:
                text: 'Salt'

            ItemLabel:
                text: 'Nitro salt'

            ItemLabel:
                text: 'Start cultures'

            ItemLabel:
                text: 'Monosugars'

            ItemLabel:
                text: 'Salting time'


        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, 1

            ItemLabel:
                id: salt
                #text: '0'

            ItemLabel:
                id: nitro
                #text: '0'

            ItemLabel:
                id: monosugars
                #text: '0'

            ItemLabel:
                id: starts
                #text: '0'

            ItemLabel:
                id: time
                #text: '0'


    BoxLayout:
        size_hint: 0.9, 0.15
        padding: [30, 0, 30, 20]
        Button:
            text: 'Go!'
            on_release:
                root.calculate()
